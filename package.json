		"husky": "^7.0.4",
		"lint-staged": "^12.3.7",
		"prettier": "^2.6.2",
		"rollup": "^2.70.1",
		"rollup-plugin-copy": "^3.4.0",
		"typescript": "^4.6.3"
	},
	"engines": {
		"node": ">=12"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "eslint --ignore-path .gitignore --cache --ext .js,.jsx,.ts,.tsx",

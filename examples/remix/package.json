		"remix-form-validity": "*"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.3.4",
		"@remix-run/eslint-config": "^1.3.4",
		"@types/react": "^17.0.24",
		"@types/react-dom": "^17.0.9",
		"cross-env": "^7.0.3",
		"eslint": "^8.11.0",
		"npm-run-all": "^4.1.5",
		"tailwindcss": "^3.0.23",
		"typescript": "^4.5.5"
